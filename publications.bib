@misc{lehle2023,
  title = {The Heart of Galaxy Clusters: Demographics and Physical Properties of Cool-Core and Non-Cool-Core Halos in the {{TNG-Cluster}} Simulation},
  shorttitle = {The Heart of Galaxy Clusters},
  author = {Lehle, Katrin and Nelson, Dylan and Pillepich, Annalisa and Truong, Nhut and Rohr, Eric},
