@misc{ayromlou2023a,
  title = {An {{Atlas}} of {{Gas Motions}} in the {{TNG-Cluster Simulation}}: From {{Cluster Cores}} to the {{Outskirts}}},
  shorttitle = {An {{Atlas}} of {{Gas Motions}} in the {{TNG-Cluster Simulation}}},
  author = {Ayromlou, Mohammadreza and Nelson, Dylan and Pillepich, Annalisa and Rohr, Eric and Truong, Nhut and Li, Yuan and Simionescu, Aurora and Lehle, Katrin and Lee, Wonki},
  year = {2023},
