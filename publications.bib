}

@misc{nelson2023a,
  title = {Introducing the {{TNG-Cluster Simulation}}: Overview and Physical Properties of the Gaseous Intracluster Medium},
  shorttitle = {Introducing the {{TNG-Cluster Simulation}}},
  author = {Nelson, Dylan and Pillepich, Annalisa and Ayromlou, Mohammadreza and Lee, Wonki and Lehle, Katrin and Rohr, Eric and Truong, Nhut},
